<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeProfileActivity">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/before"
        android:id="@+id/back"
        android:layout_gravity="end|center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp">
    </ImageView>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"></de.hdodenhof.circleimageview.CircleImageView>
<!--        android:src="@drawable/ic_launcher_foreground" />-->


    <Button
        android:id="@+id/chooseButton"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:text="Choose Image"
        android:textColor="@color/white"
        android:background="@drawable/edittext_border"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/chooseButton"
        android:id="@+id/changeProfileName"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">
        <TextView
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_name"
            android:layout_margin="5dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/changeUsername"
            style="@style/EDITTEXT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter your new profile name"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:background="@drawable/boder_searchview"
            android:textSize="16sp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/changeProfileName"
        android:id="@+id/changeProfileEmail"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">
        <TextView
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_email"
            android:layout_margin="5dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/changeEmail"
            style="@style/EDITTEXT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter your new profile email"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:background="@drawable/boder_searchview"
            android:textSize="16sp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/changeProfileEmail"
        android:id="@+id/changeProfilePassword"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">
        <TextView
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_password"
            android:layout_margin="5dp"
            android:textStyle="bold">
        </TextView>

        <EditText
            android:id="@+id/changePassword"
            style="@style/EDITTEXT"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter your new profile password"
            android:inputType="text"
            android:paddingLeft="16dp"
            android:paddingTop="10dp"
            android:paddingRight="16dp"
            android:paddingBottom="10dp"
            android:background="@drawable/boder_searchview"
            android:textSize="16sp"></EditText>
    </LinearLayout>

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/changeProfilePassword"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:text="Update profile"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:background="@drawable/edittext_border"/>

</RelativeLayout>