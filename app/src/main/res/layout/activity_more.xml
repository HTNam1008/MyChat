<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <TextView
            style="@style/TEXT"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="More"
            android:textSize="60px"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
        </TextView>
        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/border"
            android:text="Sign Out"
            android:layout_gravity="center_vertical">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_avt">
        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                style="@style/TEXT"
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Hoang Thanh Nam"
                android:textSize="15dp"
                android:maxWidth="200dp"
               >

            </TextView>

            <TextView
                style="@style/TEXT"
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="abcxyz@gmail.com"
                android:textColor="#ADB5BD"
                android:textSize="15dp"
                android:maxWidth="200dp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_right"
                android:layout_gravity="end|center_vertical">
            </ImageView>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:divider="#00000000"
        android:paddingTop="30dp"></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:abb_tabAnimationSelected="slide"
            app:abb_indicatorHeight="4dp"
            app:abb_indicatorMargin="16dp"
            app:abb_indicatorAppearance="round"
            app:abb_selectedIndex="0"
            app:abb_indicatorLocation="bottom"
            app:abb_selectedTabType="icon"
            app:abb_tabs="@menu/menu"
            android:background="#525FE1"
            app:abb_tabColor="@color/white"
            app:abb_tabColorSelected="@color/white"
            app:abb_indicatorColor="#F86F03"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>

</LinearLayout>
